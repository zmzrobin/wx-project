/* pages/index/index.wxss */

.search {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  height: 70rpx;
  padding:0 20rpx;
  background-color: #f4f4f4;
  margin: 0 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.search-ico {
  margin-right: 20rpx;
}
.search-input{
  font-size: 30rpx;
  flex:1;
}
.scrollview{
  height: 1021rpx;
  margin-top: 20rpx;
}
.list{
  box-sizing: border-box;
  padding: 20rpx;
  column-count: 2; 
  column-gap: 10rpx;
  overflow: hidden;
}
.list-item{
  box-sizing: border-box;
  break-inside: avoid;
  width: 350rpx;
  margin-bottom: 10rpx;
  border: 1rpx solid #f4f4f4;
  padding: 4rpx;
  position: relative;
  
}
.list-item-img{
  width: 100%;
  height: 100%;
  display: block;
}
.list-item-text{
  font-size: 26rpx;
  box-sizing: border-box;
  padding: 10rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 340rpx;
  display: block;
}
.list-item-btn{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 10rpx;
}